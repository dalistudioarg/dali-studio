---
import "../styles/global.css";

const { 
  title = "Dali Studio", 
  description = "Desarrollo web profesional para emprendedores y negocios en LATAM." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
</head>

<body class="bg-slate-950 text-slate-100 font-sans">
  <slot />
</body>
</html>